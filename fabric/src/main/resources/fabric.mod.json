{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${mod_description}",
    "authors": [
        "${mod_author}"
    ],
    "contributors": [
        "${credits}"
    ],
    "contact": {
        "homepage": "https://truly-modular.github.io/",
        "issues": "https://github.com/Truly-Modular/Modular-Item-API/issues",
        "sources": "https://github.com/Truly-Modular/Modular-Item-API",
        "patreon": "https://www.patreon.com/Smartinb"
    },
    "license": "CC-BY-NC-4.0",
    "icon": "icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "smartin.miapi.fabric.MiapiFabric"
        ]
    },
    "mixins": [
        "miapi.mixins.json",
        "miapi-common.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": ">=${fabric_api_version}",
        "architectury": ">=13.0.0",
        "minecraft": ">=${minecraft_version}"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.discord": "https://discord.gg/m9AbjqvcGn",
                "modmenu.patreon": "https://www.patreon.com/Smartinb"
            }
        }
    }
